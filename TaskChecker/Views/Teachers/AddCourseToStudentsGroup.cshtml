@model StudentsGroupCourseViewModel

@{
    Layout = null;
}

<form asp-action="AddCourseToStudentsGroup" asp-controller="Teachers">
    <h2 style="text-align: center" id="title">Добавить курс</h2>

    <div class="row col-12 justify-content-center">
        <label asp-for="StudentsGroupId" hidden>Id:</label>
        <input type="hidden" asp-for="StudentsGroupId" />
    </div>

    <div class="row col-12">
        <div class="col-5 justify-content-end">
            <label style="font-weight:bold" asp-for="CourseId">Курс:</label>
        </div>
        <div class="col-7 justify-content-start">
            <select asp-for="CourseId" class="form-select" asp-items="Model.Courses"></select>
        </div>
    </div>

    <input class="edit_button" style="text-align: center" type="submit" value="Добавить">
</form>