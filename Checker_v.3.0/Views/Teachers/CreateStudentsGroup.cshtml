@model CreateStudentsGroupViewModel

@{
    Layout = null;
}

<form asp-action="CreateStudentsGroup" asp-controller="Teachers">
    <h2 style="text-align: center" id="title">Создать группу</h2>

    <div class="row col-12">
        <div class="col-5 justify-content-end">
            <label style="font-weight:bold" asp-for="Title">Название:</label>
        </div>
        <div class="col-7 justify-content-start">
            <input type="text" asp-for="Title" />
        </div>
    </div>

    <div class="row col-12">
        <div class="col-5 justify-content-end">
            <label asp-for="OwnerId" hidden>Владелец:</label>
            <input type="hidden" asp-for="OwnerId" value="@Model.OwnerId" />
        </div>
        <div class="col-7 justify-content-start">
            <input type="hidden" asp-for="OwnerId" value="@Model.OwnerId" />
        </div>
    </div>

    <input style="text-align: center" type="submit" value="Создать">
</form>